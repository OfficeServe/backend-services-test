                    <h3 style="padding-bottom: 0px;">Delivery Address</h3>
                    {{#deliveryAddress}}
                        {{name}}<br>
                        {{#address}}
                            {{#addressLine1}}{{addressLine1}}<br>{{/addressLine1}}
                            {{#addressLine2}}{{addressLine2}}<br>{{/addressLine2}}
                            {{#addressLine3}}{{addressLine3}}<br>{{/addressLine3}}
                            {{city}} {{postCode}}<br>
                        {{/address}}
                    {{/deliveryAddress}}
                </div>

                <div class="right">
                  {{#deliveryDate}}Delivery Date : {{deliveryDate}}<br>{{/deliveryDate}}
                  {{#deliverySlot}}Delivery Time : {{deliverySlot}}<br>{{/deliverySlot}}
                  {{#invoiceDetails}}
                  Invoice No. : {{invoiceNumber}}<br>
                  {{#accountNumber}}Account Code : {{accountNumber}}<br>{{/accountNumber}}
                  {{/invoiceDetails}}

                </div>
            </div>

            <div class="information">
              <div class="left">
                {{#deliveryAddress}}
