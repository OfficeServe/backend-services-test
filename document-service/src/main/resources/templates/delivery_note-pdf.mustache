<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>OfficeServe Invoice</title>

    <style>
    .invoice-box{
        padding:30px;
        font-size:10px;
        line-height:20px;
        font-family: Arial, 'Helvetica', Helvetica, sans-serif;
        color:#555;
        overflow: hidden;
    }

    .invoice-box table{
        width:100%;
        line-height:inherit;
        text-align:left;
    }

    .invoice-box table td{
        padding:5px;
        vertical-align:top;
    }

    .invoice-box table tr td:nth-child(2){
        text-align:right;
    }

    .top {
        padding-bottom:20px;
        position: relative;
    }

    .top .right {
      top: 44px;
      right: 200px;
      position: absolute;
    }

    h3 {
      margin: 0;
      padding: 1em 0;
    }

    .information {
        padding-bottom:40px;
        position: relative;
    }

    .information .right {
      top: 0;
      right: 50px;
      position: absolute;
    }

    .invoice-box table tr.heading td{
        background:#eee;
        border-bottom:1px solid #ddd;
        font-weight:bold;
        text-align: right;
    }

    .invoice-box table tr.heading td:first-child{
        text-align: left;
    }

    .invoice-box table tr.details td{
        padding-bottom:20px;
    }

    .invoice-box table tr.item td{
        border-bottom:1px solid #eee;
        text-align: right;
    }

    .invoice-box table tr.item td:first-child{
        text-align: left;
    }

    .invoice-box table tr.item.last td{
        border-bottom:none;
    }

    .invoice-box table tr.total td:nth-child(2){
        font-weight:bold;
    }

    .invoice-box table tr.total td:first-child{
    }

    .invoice-box table.items {
      border-bottom: 1px solid black;
    }

    table.table-total {
      width: 250px;
      float: right;
    }

    .invoice-box table.table-total td {
      padding: 0 5px;
    }

    @media only screen and (max-width: 600px) {
        .invoice-box table tr.top table td{
            width:100%;
            display:block;
            text-align:center;
        }

        .invoice-box table tr.information table td{
            width:100%;
            display:block;
            text-align:center;
        }
    }
    </style>
</head>

